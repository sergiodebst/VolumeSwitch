<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VolumeSwitch">
    <ControlTemplate x:Key="{x:Type local:KeyboardShortcutBox}" TargetType="{x:Type local:KeyboardShortcutBox}">
        <TextBox x:Name="ShortcutBox" Text="{Binding Text, RelativeSource={x:Static RelativeSource.TemplatedParent}, Mode=OneWay}" IsReadOnly="True" />
    </ControlTemplate>
</ResourceDictionary>