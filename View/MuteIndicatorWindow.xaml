<Window x:Class="VolumeSwitch.View.MuteIndicatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VolumeSwitch.View"
        mc:Ignorable="d"
        WindowStyle="None" AllowsTransparency="True" Background="Black" Topmost="True" ShowInTaskbar="False" ShowActivated="False" Focusable="False" Top="205" Left="50"
        Title="MuteIndicatorWindow" Height="65" Width="65">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Path Fill="White" Stretch="Uniform" Width="32" Height="32" Data="M 10 17 q -1 0 -1 -1 V 6 q 0 -1 1 -1 h 5 q 1 0 1 1 v 10 q 0 1 -1 1 Z m 1 2 H 9 q -2 0 -2 -2 V 13 q 0.511 -0.582 1 0 v 4 q 0 1 1 1 h 7 q 1 0 1 -1 V 13 q 0.504 -0.518 1 0 v 4 q 0 2 -2 2 H 13 v 1 h 2 v 1 H 10 V 20 h 2 V 19" />
        <Path Fill="Red" Stretch="Uniform" Width="32" Height="32" Data="m 18 21 L 12.409 14.236 L 7 21 L 6 20 L 11.604 12.99 L 6 6 L 7 5 l 5.521 6.85 L 18 5 L 19 6 L 13.425 12.971 L 19 20 Z" Visibility="{Binding IsMicrophoneMuted, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</Window>
